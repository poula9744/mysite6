<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<!-- 로그인 -->
	<select id="selectByIdPw" resultType="com.javaex.vo.UserVo" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			select no, id, password, name, gender
			from users 
			where id= #{id}
			and password=#{password}
		]]>
	</select>
	
	<!-- 회원가입 -->
	<insert id="join" parameterType="com.javaex.vo.UserVo">
		insert into users
		values(null, 
		 	   		#{id},
		       		#{password}, 
		 	  		 #{name}, 
		 	  		 #{gender})
	</insert>
	
	<!-- 회원정보수정 -->
	<update id="modify" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users
			set name= #{name},
				  password= #{password},
				  gender= #{gender}
			where id= #{id} 
		]]>
	</update>
	
</mapper>